{
  "name": "laim",
  "version": "0.0.0",
  "description": "",
  "license": "ISC",
  "author": "Aleksei Berezkin",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run build@plugin",
    "build@plugin": "(cd ts-plugin && tsc)",
    "clean": "npm run clean@js ; npm run clean@tsbuildinfo ; npm run clean@output ; npm run clean@log",
    "clean@js": "rm -f *.js ; rm -f ts-plugin/*.js",
    "clean@tsbuildinfo": "rm -f tsconfig.tsbuildinfo ; rm -f ts-plugin/tsconfig.tsbuildinfo",
    "clean@output": "rm -f laim-output.css ; rm -f server/laim-output.css",
    "clean@log": "rm -f server/tsserver-*.log ; rm -f server/ti-*.log",
    "test": "npm run test@plugin && npm run test@runtime && npm run test@server",
    "test@plugin": "npm run build@plugin && node ts-plugin/index.test.js",
    "test@runtime": "node test/runtime.test.ts",
    "test@server": "npm run build@plugin && node test/server.test.ts"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "laim-ts-plugin-dev": "file:./ts-plugin",
    "typescript": "^5.8.3",
    "uvu": "^0.5.6"
  }
}
